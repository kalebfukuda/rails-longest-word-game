<h1>New game</h1>
<div>
  <div class="d-flex">
    <% @letters.each do |letter| %>
      <div class="bg-primary-subtle ratio ratio-1x1 m-2 d-flex
        justify-content-center align-items-center fs-1"
        >
        <%= letter.capitalize %>
      </div>
    <% end %>
  </div>
  <div class="mt-2">
    <form action="/score" method="get" data-turbo="false" class="form-group">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <p>What is the longest word you can find?</p>
      <input class="form-control" type="text" name="word">
      <input class="form-control btn btn-primary mt-2" type="submit" class="btn btn-primary">
      <input id="letters" name="letters" value=<%= @letters.join %> type="hidden" />
    </form>
  </div>
</div>
